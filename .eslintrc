{
  "rules": {
    "no-unused-vars": [1],
    "linebreak-style": [0, "windows"],
    "no-console": 0,
    "react/jsx-uses-vars": 1,
    "prettier/prettier": "error"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jquery": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "classes": true
    }
  },
  "plugins": ["react", "prettier"],
  "extends": ["eslint:recommended", "prettier"],
  "parser": "babel-eslint",
  "globals": {
    "React": true,
    "expect": true,
    "assert": true,
    "chai": true,
    "_DEV_": true,
    "_DEBUG_": true,
    "DEBUG": true
  }
}
